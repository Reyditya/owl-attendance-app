<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/warna2"
    tools:context=".views.fragment.profile.ProfileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_ilustrasi_profile" />

    <TextView
        android:id="@+id/txt_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="P r o f i l e"
        android:textColor="@color/warna4"
        android:textSize="32sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/txt_profile"
        android:layout_margin="20dp"
        android:src="@color/warna5" />

    <TextView
        android:id="@+id/txt_hai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ci_profile"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Hai,"
        android:textColor="@color/warna4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_hai"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/default_name"
        android:textColor="@color/warna4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nama"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/default_email"
        android:textColor="@color/warna4"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_change_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/cv_change_language"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/warna3"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Change Password"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cv_change_language"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/cv_sign_out"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_change_language"
        android:gravity="center"
        android:text="Change Language"
        android:textAlignment="center"
        android:textColor="@color/warna3"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/cv_sign_out"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/bg_sign_out"
        android:gravity="center"
        android:text="Sign-Out"
        android:textAlignment="center"
        android:textColor="@color/warna6"
        android:textSize="19sp" />

</RelativeLayout>